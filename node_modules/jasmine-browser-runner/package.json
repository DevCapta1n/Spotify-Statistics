{
  "name": "jasmine-browser-runner",
  "version": "0.6.0",
  "description": "Serve and run your Jasmine specs in a browser",
  "main": "index.js",
  "bin": "bin/jasmine-browser",
  "files": [
    "MIT.LICENSE",
    "README.md",
    "package.json",
    "index.js",
    "run.html.ejs",
    "bin/*.js",
    "lib/**/*.js"
  ],
  "scripts": {
    "posttest": "eslint bin/* lib/*.js lib/**/*.js spec/**/*.js scripts/*.js index.js --ignore-path=.styleIgnore && prettier --check --ignore-path=.styleIgnore lib/*.js lib/**/*.js spec/**/*.js scripts/*.js index.js",
    "test": "jasmine",
    "cleanup": "prettier --write --ignore-path=.styleIgnore lib/*.js lib/**/*.js spec/**/*.js scripts/*.js index.js",
    "release": "node scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasmine/jasmine-browser.git"
  },
  "keywords": [
    "jasmine",
    "testing",
    "tdd"
  ],
  "engines": {
    "node": ">= 10.0"
  },
  "author": "Slackersoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasmine/jasmine-browser/issues"
  },
  "homepage": "https://github.com/jasmine/jasmine-browser#readme",
  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "glob": "^7.1.7",
    "jasmine": "^3.6.0",
    "jasmine-core": "^3.6.0",
    "selenium-webdriver": "^4.0.0-alpha.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "prettier": "^1.17.1",
    "shelljs": "^0.8.3",
    "temp": "^0.9.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "expectAsync": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "jasmine"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "block-spacing": "error",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "func-call-spacing": [
        "error",
        "never"
      ],
      "key-spacing": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-whitespace-before-property": "error",
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": "error",
      "no-console": "off"
    },
    "overrides": {
      "files": "spec/**/*.js",
      "env": {
        "jasmine": true
      }
    }
  }
}
